%br/

%h1= 'Reporte de solicitudes por UR'

=simple_form_for :report, url: admin_generate_reports_by_ur_path  do |f|
  .span-19.last
    .span-19.last
      = f.input :start_date, label: 'Fecha Inicial:', as: :date, order: [:year, :month, :day], default: Date.today.prev_month.beginning_of_month
    .span-19.last
      = f.input :end_date, label: 'Fecha Final:', as: :date, order: [:year, :month, :day], default: Date.today.prev_month.end_of_month
    .span-19.last
      = f.input :ur_id, label: 'Unidad Responsable:', collection:  Ur.ur_sel, include_blank: false
    .span-19.last
      %br/
      %br/
      = f.submit 'Generar Reportes', name: 'generate', :class => "jq-button"
      -#= f.submit 'Envia Reportes', name: 'sent', :class => "jq-button"
      = link_to 'Enviar Reportes', '#', :class => "jq-button"
      = link_to 'Regresar', admin_sequence_requests_path, :class => "jq-button"

